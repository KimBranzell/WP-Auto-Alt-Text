{
  "configurations": [
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "request": "launch",
      "hostname": "0.0.0.0",
      "port": 9003,
      "pathMappings": {
        "/var/www/html": "${workspaceFolder}"
      },
      "preLaunchTask": "DDEV: Enable Xdebug",
      "postDebugTask": "DDEV: Disable Xdebug",
      "skipFiles": [
        "**/vendor/**/*.php",
        "**/wp-admin/**/*.php",
        "**/wp-includes/**/*.php",
        "**/wp-blog-header.php"
      ]
    }
  ]
}